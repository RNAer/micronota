general = config.pop('general')
seq = general['seq']
genetic_code = general['genetic_code']
outputs = []
for task in config:
    task_config = config[task]
    for rule in task_config:
        if task == 'protein':
            outputs.append('%s.hit' % rule)
        else:
            outputs.append('%s.ok' % rule)
        rule_config = task_config[rule]
        include: '%s.rule' % rule

rule all:
    input:
        outputs

