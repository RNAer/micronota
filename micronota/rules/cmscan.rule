rule cmscan:
    '''Run cmscan.'''
    input:
        db = rule_config['db'],
        fna = config['seq']
    output:
        'cmscan.txt',
        'cmscan.ok'
    log:
        'cmscan.log'
    threads:
        rule_config['threads']
    params:
        rule_config['params']
    priority:
        rule_config['priority']
    message:
        '--- RUNNING cmscan ...'
    shell:
        'cmscan {params} --cpu {threads} --tblout {output[0]} {input.db} {input.fna} &> {log} && '
        'touch {output[1]}'
