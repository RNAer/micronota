rule gene:
    '''Predict CDS with Prodigal.'''
    input:
        INPUT
    output:
        gff = '%s.gff' % tool_out,
        faa = '%s.faa' % tool_out,
        fna = '%s.fna' % tool_out
    params:
        tool_config['params']
    log:
        '%s.log' % tool_out
    priority:
        tool_config['priority']
    shell:
        'prodigal {params} -f gff -g %r -i {input[0]} -o {output.gff}'
        ' -a {output.faa} -d {output.fna} &> {log}' % config['genetic_code']

