rule aragorn:
    '''Predict tRNA with Aragorn.'''
    input:
        fna = config['seq']
    output:
        '%s.txt' % tool_output,
        '%s.ok' % tool_output
    params:
        tool_config['params']
    log:
        '%s.log' % tool_output
    priority:
        tool_config['priority']
    message:
        '--- RUNNING Aragorn ...'
    shell:
        'aragorn {params} -gc%r -o {output[0]} {input.fna} &> {log} && '
        'touch {output[1]}' % config['genetic_code']

